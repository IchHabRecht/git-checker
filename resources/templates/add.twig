{% extends 'base.twig' %}

{% block title %}Git Checker - {{ root }}{{ virtualHost }}{% endblock %}

{% block content %}
    {% set trimmedVirtualHost = virtualHost|trim('/\\') %}
    <div class="page-header">
        <h1>{{ root }}{{ virtualHost }}</h1>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading clearfix">
                    <a href="{{ path_for('show', { 'virtualHost': trimmedVirtualHost }) }}" class="btn pull-left"><span aria-hidden="true" class="glyphicon glyphicon-arrow-left"></span></a>
                </div>
                <div class="panel-body">
                    <form action="{{ path_for('create', { 'virtualHost': trimmedVirtualHost }) }}" method="post">
                        <div class="form-group">
                            <label for="clone-url">Clone url</label>
                            <input id="clone-url" name="clone-url" type="text" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="branch-name">Branch name</label>
                            <input id="branch-name" name="branch-name" type="text" class="form-control" placeholder="master">
                        </div>
                        <div class="form-group">
                            <label for="parent-directory">Parent folder</label>
                            <select id="parent-directory" name="parent-directory" class="form-control">
                                {% for directory in folders %}
                                    {% set directoryName = directory.relativePathname|replace({'\\': '/'}) %}
                                    <option value="{{ directoryName }}">{{ directoryName }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <button type="submit" class="btn btn-default">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
