{% extends 'base.twig' %}

{% block title %}Git Checker - {{ absoluteVirtualHostPath }}{% endblock %}

{% block content %}
    <div class="page-header">
        <h1>{{ absoluteVirtualHostPath }}</h1>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading clearfix">
                    <a href="{{ path_for('show', { 'virtualHost': virtualHost }) }}" class="btn pull-left"><span aria-hidden="true" class="glyphicon glyphicon-arrow-left"></span></a>
                </div>
                <div class="panel-body">
                    <h2 style="margin-top: 0">{{ repository }}</h2>
                    <form action="{{ path_for('checkout', { 'virtualHost': virtualHost, 'repository': repository }) }}" method="post">
                        <div class="form-group">
                            <label for="branch-name">Branch / Tags</label>
                            <select id="branch" name="branch-name" class="form-control">
                                <optgroup label="branches">
                                {% for branch in branches %}
                                    <option value="{{ branch }}">{{ branch }}</option>
                                {% endfor %}
                                </optgroup>
                                <optgroup label="tags">
                                    {% for tag in tags %}
                                        <option value="{{ tag }}">{{ tag }}</option>
                                    {% endfor %}
                                </optgroup>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-default">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
